<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/email_message_composing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/email_message_composing_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/background"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/email_message_composing_back"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/email_message_composing_send"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/email_message_send"
            android:tint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/email_message_composing_from_scroll"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_message_composing_top">

        <LinearLayout
            android:id="@+id/email_message_composing_from_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="true">

            <EditText
                android:id="@+id/email_message_composing_from_layout_part_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:focusable="true"
                android:inputType="textPersonName"
                android:text="@string/from"
                android:textSize="20sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/email_message_composing_divider_dash_between_from_scroll_to_scroll"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bright_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_message_composing_from_scroll" />

    <HorizontalScrollView
        android:id="@+id/email_message_composing_to_scroll"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_message_composing_divider_dash_between_from_scroll_to_scroll">

        <LinearLayout
            android:id="@+id/email_message_composing_to_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:contextClickable="true">

            <EditText
                android:id="@+id/email_message_composing_to_layout_part_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="326"
                android:backgroundTint="@color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:inputType="textPersonName"
                android:text="@string/to"
                android:textSize="20sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/email_message_composing_divider_dash_between_to_scroll_subject"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bright_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_message_composing_to_scroll" />

    <EditText
        android:id="@+id/email_message_composing_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/transparent"
        android:clickable="true"
        android:text="@string/subject"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_message_composing_divider_dash_between_to_scroll_subject" />

    <View
        android:id="@+id/email_message_composing_divider_dash_between_subject_content_scroll"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bright_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_message_composing_subject" />

    <ScrollView
        android:id="@+id/email_message_composing_content_scroll"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_message_composing_subject">

        <EditText
            android:id="@+id/email_message_composing_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_email_message_composing_from_to_layout_part"
            android:backgroundTint="@color/transparent"
            android:inputType="textMultiLine"
            android:text="@string/compose_message"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </ScrollView>

    <ImageView
        android:id="@+id/email_message_composing_email_address_from_correct_layout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@id/email_message_composing_divider_dash_between_from_scroll_to_scroll"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/email_message_composing_email_address_to_correct_layout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@id/email_message_composing_divider_dash_between_to_scroll_subject"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/email_message_composing_from_layout_clickable"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_message_composing_top" />

    <View
        android:id="@+id/email_message_composing_to_layout_clickable"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_message_composing_divider_dash_between_from_scroll_to_scroll" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="266dp" />


</android.support.constraint.ConstraintLayout>
