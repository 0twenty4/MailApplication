<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <size
                        android:width="96dp"
                        android:height="89dp">
                    </size>
                    <solid
                        android:color="@color/white">
                    </solid>
                    <stroke
                        android:color="@color/bright_grey"
